{
	"inputs": [
		{
			"type": "promptString",
			"id": "supabase-access-token",
			"description": "Supabase personal access token",
			"password": true
		}
	],
	"servers": {
		"nx-mcp": {
			"type": "http",
			"url": "http://localhost:9819/mcp"
		},
		"supabase": {
			"command": "npx",
			"args": [
				"-y",
				"@supabase/mcp-server-supabase@latest",
				"--read-only",
				"--project-ref=cvsfusztbubvtjmdxhbj"
			],
			"env": {
				"SUPABASE_ACCESS_TOKEN": "${input:supabase-access-token}"
			}
		}
	}
}